{
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "url": "https://json.schemastore.org/package"
    }
  ],

  // General formatting defaults
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Force Prettier for specific languages
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[mdx]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Disable competing formatters
  "mdx.format.enable": false,
  "markdown.format.enable": false,

  // Make sure VS Code uses your local Prettier
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,
  "prettier.resolveGlobalModules": false,
  "prettier.prettierPath": "./node_modules/prettier/index.cjs",

  // Organize imports automatically
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },

  // TailwindCSS IntelliSense
  "files.associations": { "*.css": "tailwindcss" },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    "class(?:Name)?=\\\"([^\\\"]*)\\\"",
    "class(?:Name)?=\\{\\s*`([^`]+)`\\s*\\}",
    "class(?:Name)?=\\{\\s*\\\"([^\\\"]+)\\\"\\s*\\}",
    "tw=\\\"([^\\\"]*)\\\"",
    "tw=\\{\\s*`([^`]+)`\\s*\\}",
    ["clsx\\(([^)]*)\\)", "(?:'|\\\"|`)([^'\\\"`]*)(?:'|\\\"|`)"],
    ["cva\\(([^)]*)\\)", "(?:'|\\\"|`)([^'\\\"`]*)(?:'|\\\"|`)"]
  ],

  // Python config
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestEnabled": true,

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "black-formatter.args": ["--line-length", "100"]
}
